<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddRiceTimer">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_button"
        android:onClick="startRice"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#fffe9e3a"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jasmine_button"
        android:onClick="startJasmine"
        android:id="@+id/jasmine_button"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/button"
        android:background="#ff97ff77"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/basmati_button"
        android:onClick="startBasmati"
        android:id="@+id/basmati_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/jasmine_button"
        android:layout_marginBottom="48dp"
        android:background="#ff8ff3ff"
        android:textSize="30sp" />

</RelativeLayout>
