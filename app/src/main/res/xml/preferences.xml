        android:defaultValue="11.5" />
    <EditTextPreference
        android:key="@string/rest_key"
        android:title="@string/rest_rice_settings_name"
        android:summary="@string/rest_summary"
        android:inputType="numberDecimal"
        android:defaultValue="10" />
